%div{:class => "row"}
  %div{:class => "span8"}
    %div{:class => "row"}
      %div{:class => "span8"}
        %h4
          %strong= @movie.original_name
          %span= "(#{@movie.alternative_name})" unless @movie.alternative_name.nil?
    %div{:class => "row"}
      %div{:class => "span3"}
        = @movie.posters.second.nil? ? image_tag('no_poster.jpg'):image_tag( @movie.posters.second.url, :alt => @movie.original_name )
      %div{:class => "span5"}
        %strong Release year:
        = @movie.released.to_s.size.zero? ? "-":@movie.released[0,4]
        %br
        %strong Rating:
        = @movie.rating.to_s.size.zero? ? "-":@movie.rating
        %br
        %strong Certification:
        = @movie.certification.to_s.size.zero? ? "-":@movie.certification
        %hr
        %strong Director:
        = @director.nil? ? "-":@director
        %br
        %strong Actors:
        = @actors.length > 0 ? @actors.join(', '):"-"
        %hr
        %strong Description:
        = @movie.overview.to_s.size.zero? ? "-":@movie.overview
        %hr
        = image_tag 'google-play-favicon.ico'
        %strong Google Play Store:
        = @google_play_data
        %hr
        = link_to " back to search results", :back, :class => 'btn icon-arrow-left'
